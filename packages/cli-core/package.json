        "http-proxy": "^1.18.1",
        "log4js": "^6.1.2",
        "open": "^7.0.4",
        "request": "^2.88.2",
        "rimraf": "^3.0.2",
        "shortid": "^2.2.15"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^11.0.2",
        "@rollup/plugin-json": "^4.0.2",
        "@rollup/plugin-node-resolve": "^7.1.1",
        "@types/chai": "^4.2.10",
        "@types/concat-stream": "^1.6.0",
        "@types/express": "^4.17.3",
        "@types/http-proxy": "^1.17.3",
        "@types/mocha": "^7.0.2",
        "@types/mockery": "^1.4.29",
        "@types/morgan": "^1.9.0",
        "@types/request": "^2.48.4",
        "@types/rimraf": "^2.0.3",
        "@types/shortid": "^0.0.29",
        "chai": "^4.2.0",
        "cross-env": "^7.0.2",
        "mocha": "^7.1.0",
        "mockery": "^2.1.0",
        "rollup": "^2.0.2",
        "rollup-plugin-typescript2": "^0.26.0",
        "ts-node": "^8.6.2",
        "typescript": "^3.8.3"
    }
