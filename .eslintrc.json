{
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true,
        "es6": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "ignorePatterns": [
        "live-examples/*",
        "tutorials/*",
        "packages/web/**/*.js",
        "packages/core/**/*.js",
        "packages/fdc3/**/*.js",
        "packages/workspaces-app/**/*.js",
        "packages/golden-layout/*",
        "docs/*",
        "e2e/*"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "globals": {
        "expect": true,
        "glue": true,
        "glueReady": true,
        "gtfReady": true,
        "GlueWeb": true
    },
    "overrides": [
        {
            "files": [
                "**/*.ts"
            ],
            "env": {
                "browser": true,
                "es6": true,
                "node": true,
                "commonjs": true,
                "mocha": true
            },
            "extends": [
                "eslint:recommended",
                "plugin:@typescript-eslint/eslint-recommended",
                "plugin:@typescript-eslint/recommended"
            ],
            "parser": "@typescript-eslint/parser",
            "parserOptions": {
                "ecmaVersion": 2018,
                "sourceType": "module",
                "project": "./tsconfig.json"
            },
            "plugins": [
                "@typescript-eslint"
            ],
            "rules": {
                "indent": [
                    "error",
                    4
                ],
                "quotes": [
                    "error",
                    "double"
                ],
                "@typescript-eslint/no-explicit-any": [
                    "error"
                ],
                "@typescript-eslint/no-unused-vars": [
                    "error"
                ]
            }
        }
    ]
}